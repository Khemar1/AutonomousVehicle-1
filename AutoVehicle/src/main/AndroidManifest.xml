<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.autonomousvehicle">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Mapping" android:label="@string/bMapping" android:parentActivityName=".MenuActivity"/>
        <activity android:name=".RemoteControl" android:parentActivityName=".MenuActivity"
            android:label="@string/RemoteActivity"/>
        <activity android:name=".RegisterActivity" android:parentActivityName=".LoginActivity"
            android:label="@string/Register"/>
        <activity android:name=".MenuActivity"
            android:label="@string/mainmenu"/>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/settings" />
    </application>

</manifest>