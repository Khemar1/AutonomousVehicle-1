    <TextView
        android:text="@string/direction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/direction"
        android:textStyle="normal|bold"
        android:textColor="@color/colorFABText"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/tvInfo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="37dp" />

    <TextView
        android:text="@string/center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/directiontv"
        android:textColor="@color/colorFABText"
        android:fontFamily="casual"
        android:layout_marginStart="71dp"
        android:layout_alignBaseline="@+id/direction"
        android:layout_alignBottom="@+id/direction"
        android:layout_toEndOf="@+id/direction" />

    <Button
        android:text="@string/close_connection"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:id="@+id/bClose"
        android:layout_marginTop="147dp"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_light"
        android:layout_below="@+id/IpAdd"
        android:layout_alignEnd="@+id/tvInfo" />

    <Button
        android:text="@string/connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bConnect"
        android:background="@android:color/holo_orange_dark"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="32dp"
        android:layout_alignTop="@+id/bClose"
        android:layout_toStartOf="@+id/bClose" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/IpAdd"
        android:layout_marginTop="62dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="18sp"
        android:text="@string/IPAddress"
        android:layout_below="@+id/directiontv"
        android:layout_alignEnd="@+id/bClose" />

    <TextView
        android:text="@string/enter_the_ip_address_of_the_robot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvInfo"
        android:layout_marginEnd="33dp"
        android:layout_marginTop="68dp"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <RelativeLayout
        android:id="@+id/layout_joystick"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_marginRight="36dp"
        android:background="@drawable/image_button_bg"
        android:layout_below="@+id/bClose"
        android:layout_alignStart="@+id/directiontv"
        android:layout_marginTop="112dp">
    </RelativeLayout>

</RelativeLayout>
